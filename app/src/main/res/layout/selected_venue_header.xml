<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_item_height"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="@dimen/space_16"
    android:layout_marginEnd="@dimen/space_16"
    android:background="@drawable/shadow_background"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivHeaderVenueImage"
        android:layout_width="@dimen/header_item_height"
        android:layout_height="match_parent"
        android:padding="@dimen/space_8"
        android:alpha="0.3"
        android:background="@color/colorAccent"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/space_8"
        android:layout_toEndOf="@+id/ivHeaderVenueImage"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtHeaderVenueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/VenueTextHeader"
            tools:text="Avocado" />

        <TextView
            android:id="@+id/txtHeaderVenueType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/VenueTextNormal"
            tools:text="Vegetarian/Vegan" />

        <TextView
            android:id="@+id/txtHeaderVenueAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/VenueTextSub"
            tools:text="Nikis 30" />
    </LinearLayout>
</RelativeLayout>
